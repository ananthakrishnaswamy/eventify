// 1. your database provider
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

enum VendorType {
  HALL
  CATERER
  PANDIT
  DECOR
  MUSIC
  PHOTOGRAPHY
  VIDEOGRAPHY
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Vendor {
  id          String      @id @default(uuid())
  name        String
  type        VendorType
  description String?
  basePrice   Int?
  location    String
  createdAt   DateTime    @default(now())

  halls       Hall?
  menus       Menu[]
  availability VendorAvailability[]
  bookings    Booking[]
}

model Hall {
  id          String   @id @default(uuid())
  vendorId    String   @unique
  capacity    Int
  amenities   String[]

  vendor      Vendor   @relation(fields: [vendorId], references: [id])
}

model Menu {
  id        String   @id @default(uuid())
  vendorId  String
  name      String
  price     Int
  items     String[]

  vendor    Vendor   @relation(fields: [vendorId], references: [id])
}

model VendorAvailability {
  id        String   @id @default(uuid())
  vendorId  String
  date      DateTime
  isBooked  Boolean  @default(false)

  vendor    Vendor   @relation(fields: [vendorId], references: [id])

  @@unique([vendorId, date])
}

model Booking {
  id          String        @id @default(uuid())
  vendorId    String
  date        DateTime
  amount      Int
  status      BookingStatus
  customerName String
  customerPhone String
  createdAt   DateTime      @default(now())

  vendor      Vendor        @relation(fields: [vendorId], references: [id])
}
